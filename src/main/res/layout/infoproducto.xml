<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Fondo">

    <ImageView
        android:id="@+id/info_btn_return"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/izquierda"
        android:layout_marginTop="27dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/info_btn_agregar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/agregar"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/info_img_producto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/artrikin"
        android:layout_marginTop="77dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_img_producto"
        android:layout_marginTop="-84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/prin_llFondo"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        
        <TextView
            android:id="@+id/info_txt_nombre"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="93dp"
            android:text="Artri King"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/info_txt_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info_txt_nombre"
            app:layout_constraintStart_toStartOf="@id/info_txt_nombre"
            app:layout_constraintEnd_toEndOf="@id/info_txt_nombre"
            android:text="@string/lorem"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="top"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            />
        <!--app:layout_constraintBottom_toTopOf="@id/info_txt_presentacion"-->

        <TextView
            android:id="@+id/info_txt_presentacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info_txt_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Capsulas"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingBottom="32dp"
            />

        <ImageView
            android:id="@+id/img_presentacion"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="@id/info_txt_presentacion"
            app:layout_constraintStart_toEndOf="@id/info_txt_presentacion"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/capsula"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>